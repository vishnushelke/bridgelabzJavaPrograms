package com.bridgelabz.functional;
public class SecondLargestandSmallest {

	public static void main(String[] args) {
		int a[]= {10,30,24,45,22,9};
		int max=a[0];
		int secmax=a[0];
		int min=a[0];
	int secmin=a[0];
		
		for(int i=1;i<5;i++)
		{
			if(max<a[i])
			{
				secmax=max;
				max=a[i];
			}
		}
		
		System.out.println("Second largest number is "+secmax);
		
		
		for(int i=1;i<6;i++)
		{
			if(min>a[i])
			{
				min=a[i];
				 
				if(secmin>a[i])
				{
					secmin=min;
				}
			}
			else
			{
				
				if(secmin>a[i])
				{
					secmin=a[i];
				}
			}
		}
		int x=0;
		if(min>a[5])
		{
			x=min;
			min=a[5];
			
			if(a[5]<secmin)
			{
				secmin=x;
			}
			
		}
		else
		System.out.println("second minimum is"+secmin);
		
	}

}
