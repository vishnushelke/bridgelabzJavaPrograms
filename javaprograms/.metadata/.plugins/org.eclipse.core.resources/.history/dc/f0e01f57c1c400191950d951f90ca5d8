package com.bridgelabz.functional;
import java.util.Scanner;
public class MathFunction {
	
	public static double Harmonic(int n)
	{
		double H=0.0;
		for(double i=1;i<=n;i++)
		{
			H=H+(1/i);
		}
		return H;
	}
	
	public static double SineOfAngle(int angle)
	{
		double r=Math.toRadians(angle);
		double sine=Math.sin(r);
		return sine;
	}
	
	
	public static double CosineOfAngle(int angle)
	{
		double r=Math.toRadians(angle);
		double cosine=Math.cos(r);
		return cosine;
	}
	
	public static void Binary(int n)
	{
		int x=0;
		int arr[]=new int[32];
		
		while((Math.pow(2,x))<n)
		{
			x++;
		}
		for(int i=0;i<x;i++)
		{
			arr[i]=n%2;
			n=n/2;
			
		}
		
		
		for(int i=31-x;i>=x;i--)
		{
			arr[i]=0;
		}
		for(int i=31;i>=0;i--)
		{
			System.out.print(arr[i]);
		}
	}
	
	
	public static double Futurevalue(int c,int r,int t)
	{
		double futureValue=c*Math.pow(1+r, t);
		return futureValue;
	}

	public static void main(String[] args) {
		
		double z=0.0;
		z=Harmonic(4);
		System.out.println(z);
		
		double s=0.0;
		s=SineOfAngle(45);
		System.out.println(s);

		double c=0.0;
		c=CosineOfAngle(45);
		System.out.println(c);
		
		Binary(14);
		System.out.println();
		
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter c in dollers");
		int d=sc.nextInt();
		System.out.println("Enter rate");
		int r=sc.nextInt();
		System.out.println("Enter period");
		int t=sc.nextInt();
		Futurevalue(d,r,t);
	}

}
